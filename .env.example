# ProfitHive Environment Variables
# Copy this file to .env and fill in your actual values

# =================================
# BACKEND ENVIRONMENT VARIABLES
# =================================

# Server Configuration
NODE_ENV=development
PORT=5000

# API Keys for External Services
# ===============================

# OpenWeatherMap API (Weather Data)
# Get your free API key from: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# Google Maps API (Places & Foot Traffic)
# Get API key from: https://console.cloud.google.com/
# Enable: Places API, Maps JavaScript API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Kaggle API (Transportation Data)
# Get credentials from: https://www.kaggle.com/settings (Create New API Token)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# Database Configuration
# ======================

# MongoDB (if using MongoDB instead of file storage)
MONGODB_URI=mongodb://localhost:27017/profithive
MONGODB_DB_NAME=profithive

# Redis (for caching, optional)
REDIS_URL=redis://localhost:6379

# Security & Authentication
# =========================

# JWT Secret for API authentication (generate a strong secret)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# File Storage Paths
# ==================
STORAGE_PATH=./data
LOGS_PATH=./logs

# =================================
# FRONTEND ENVIRONMENT VARIABLES
# =================================

# API Endpoints
VITE_API_BASE_URL=http://localhost:5000
VITE_BACKEND_URL=http://localhost:5000

# Firebase Configuration (if using Firebase)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Analytics & Monitoring
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_SENTRY_DSN=your_sentry_dsn_for_error_tracking

# =================================
# BLOCKCHAIN/CONTRACTS ENVIRONMENT
# =================================

# Ethereum Network Configuration
PRIVATE_KEY=your_ethereum_private_key_for_deployment
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key

# Network URLs
MAINNET_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
SEPOLIA_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Contract Addresses (after deployment)
TOKEN_CONTRACT_ADDRESS=0x...
FORECAST_CONTRACT_ADDRESS=0x...
REVENUE_SHARING_CONTRACT_ADDRESS=0x...

# Etherscan API Keys (for contract verification)
ETHERSCAN_API_KEY=Y2Y3KWZPMPMG3TUWRVKAZXXYIVJDKPJ63S
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# =================================
# PYTHON AI SERVICES ENVIRONMENT
# =================================

# Python Service Configuration
PYTHON_PATH=/usr/bin/python3
PROPHET_CACHE_DURATION=3600
KAGGLE_CACHE_DURATION=21600

# Model Storage
PROPHET_MODELS_PATH=./backend/data/models
CACHE_PATH=./backend/data/cache

# AI Service Endpoints (if running as separate services)
PROPHET_SERVICE_URL=http://localhost:5001
KAGGLE_SERVICE_URL=http://localhost:5002

# =================================
# DEVELOPMENT & DEBUGGING
# =================================

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_AI_DEBUG_LOGS=true

# Development Features
ENABLE_MOCK_DATA=false
ENABLE_DEMO_MODE=false
SKIP_API_VALIDATIONS=false

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
AI_REQUEST_TIMEOUT=45000

# =================================
# PRODUCTION OVERRIDES
# =================================

# Production Security
SECURE_COOKIES=true
ENABLE_HTTPS_REDIRECT=true
TRUST_PROXY=true

# Production URLs (update for deployment)
PRODUCTION_FRONTEND_URL=https://your-app.vercel.app
PRODUCTION_BACKEND_URL=https://your-api.railway.app