rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own user profile data
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read/write business tokens
    match /business_tokens/{tokenId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read/write forecasts
    match /forecasts/{forecastId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read/write revenue sharing data
    match /revenue_sharing/{documentId} {
      allow read, write: if request.auth != null;
    }
  }
}